<view class="container"><view class="userAccount"><view class="item userInfo"><view class="label">用户ID</view><view class="userId">{{userInfo.user.id}}</view></view><view class="item accountBalance"><view class="label">账号余额(金币)</view><view class="balance">{{userInfo.user.balance}}</view></view></view><view class="payeeInfo"><view class="opacity"><view class="item title">收款人信息</view><view class="item bankName"><view class="label">类型:</view><block wx:if="{{payment==1}}"><view class="desc">银行</view></block><block wx:else><block wx:if="{{payment==2}}"><view class="desc">支付宝</view></block><block wx:else><block wx:if="{{payment==3}}"><view class="desc">微信</view></block><block wx:else><block wx:if="{{payment==4}}"><view class="desc">钉钉</view></block></block></block></block></view><block wx:if="{{payment==1}}"><view class="item bankName"><view class="label">银行:</view><view class="desc">{{payeeInfo.account_bank}}</view></view></block><view class="item payee"><block wx:if="{{payment==1}}"><view class="label">收款人:</view></block><block wx:else><view class="label">姓名:</view></block><view class="desc">{{''+payeeInfo.account_name+''}}</view><button class="copy" type="primary" data-event-opts="{{[['tap',[['copy',['$0'],['payeeInfo.account_name']]]]]}}" bindtap="__e">点击复制</button></view><view class="item accountNumber"><block wx:if="{{payment==1}}"><view class="label">卡号:</view></block><block wx:else><view class="label">账号:</view></block><view class="desc">{{''+payeeInfo.account_number+''}}</view><button class="copy" type="primary" data-event-opts="{{[['tap',[['copy',['$0'],['payeeInfo.account_number']]]]]}}" bindtap="__e">点击复制</button></view><block wx:if="{{payment==1}}"><view class="item bankNameDetail"><view class="label">开户行:</view><view class="desc">{{''+payeeInfo.open_bank+''}}</view><button class="copy" type="primary" data-event-opts="{{[['tap',[['copy',['$0'],['payeeInfo.open_bank']]]]]}}" bindtap="__e">点击复制</button></view></block><view class="item remark">{{payeeInfo.remark}}</view></view></view><view class="rechargeAmount"><view class="label">金额</view><view class="amount"><input type="digit" placeholder="请输入金额" data-event-opts="{{[['input',[['__set_model',['','amount','$event',[]]]]]]}}" value="{{amount}}" bindinput="__e"/></view></view><button class="btn_submit" type="primary" data-event-opts="{{[['tap',[['submit']]]]}}" bindtap="__e">我已转账,确认提交</button></view>